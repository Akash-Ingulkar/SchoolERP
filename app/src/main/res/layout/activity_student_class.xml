<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:background="#C0C0C0">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Classes"
        android:textColor="#044E47"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/crr_tenentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/crr_classname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"
            android:hint="  Enter class Name" />

        <TextView
            android:id="@+id/crr_ownername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setion"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/crr_section"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"
            android:hint="  Enter section"
            android:text=""/>

    </LinearLayout>

    <Button
        android:id="@+id/crr_button1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#044E47"
        android:text="Add Section"

        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>